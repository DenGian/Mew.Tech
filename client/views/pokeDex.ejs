<%- include('partials/pokedexheader') %>
<body>
    <main class="container mx-auto p-4">
      <form method="get" action="/pokeDex" class="search-bar flex flex-col md:flex-row items-center justify-center w-full max-w-4xl mx-auto space-y-4 md:space-y-0 md:space-x-4">
        <input
          type="text"
          id="search"
          name="search"
          class="pixel-border p-2 flex-grow md:w-auto bg-yellow-300 border-red-600 text-gray-500"
          placeholder="Zoek Pokémon"
          aria-label="Zoek Pokémon"
          value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
        />
        <label class="flex items-center space-x-2">
          <input
            type="checkbox"
            id="showAllCheckbox"
            name="showAll"
            class="form-checkbox text-yellow-500 border-red-600"
            <% if (showAll) { %> checked <% } %>
          />
          <span class="text-sm text-black">Toon alle Pokémon</span>
        </label>
        <button type="submit" class="pixel-button py-2 px-4 rounded">Zoek</button>
      </form>
  
      <div class="pokemon-grid" id="pokemon-container">
        <% pokemonData.forEach(pokemon => { %>
        <div class="pokemon-box <% if (!pokemon.isCaught) { %>uncaught<% } %>" data-id="<%= pokemon.id %>">
          <h5 class="card-title text-center pokemon-name">
            #<%= pokemon.id %> <%= pokemon.name %>
          </h5>
          <img
            src="<%= pokemon.sprites.front_default %>"
            class="pokemon-img mx-auto"
            alt="<%= pokemon.name %>"
          />
          <div class="card-body text-center">
            <a class="pixel-button-pokemon py-2 px-4 rounded" href="./pokeDex/<%= pokemon.id %>">Stats</a>
          </div>
        </div>
        <% }); %>
      </div>
    </main>
  
    <script src="/js/pokedex.js"></script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
  </body>
</html>
