<%- include("partials/header") %>
<main>
    <div class="container">
        <div class="row">
            <section class="col-md-9">
                <!-- Main content takes 9 columns -->
                <h2>Analyse</h2>
                <div class="container text-center mt-3">
                    <p class="lead">
                        Vergelijk hier de verschillende Pokémon met elkaar en ontdek welke Pokémon het beste is voor
                        jouw team!
                    </p>
                </div>

                <div class="container mt-5">
                    <div class="row">
                        <!-- Deze rij bevat alle kaarten -->
                        <div class="col-md-6">
                            <div class="row justify-content-center mb-3">
                                <div class="col-8">
                                    <div class="input-group">
                                        <input
                                            type="text"
                                            class="form-control"
                                            placeholder="Zoek Pokémon (bv. Bulbasaur)"
                                            aria-label="Zoek Pokémon"
                                            aria-describedby="button-addon1"
                                        />
                                        <button class="btn btn-danger" type="button" id="button-addon1">Zoeken</button>
                                    </div>
                                </div>
                            </div>
                            <div class="card pokedex-card">
                                <div class="pokedex-header text-center">
                                    <h5>Bulbasaur #001</h5>
                                </div>
                                <div class="pokedex-body">
                                    <img
                                        src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/1.png"
                                        class="card-img-top"
                                        alt="Bulbasaur"
                                    />
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Stats</h5>
                                        <table class="table table-stats">
                                            <tbody>
                                                <tr>
                                                    <th scope="row">HP</th>
                                                    <td><span class="green-text">+ 45</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Attack</th>
                                                    <td><span class="red-text">- 49</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Defense</th>
                                                    <td><span class="green-text">+ 49</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Special Attack</th>
                                                    <td><span class="green-text">+ 65</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Special Defense</th>
                                                    <td><span class="green-text">+ 65</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Speed</th>
                                                    <td><span class="red-text">- 45</span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <button class="btn btn-primary mt-3" id="play-sound-bulbasaur">Speel Geluid</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="row justify-content-center mb-3">
                                <div class="col-8">
                                    <div class="input-group">
                                        <input
                                            type="text"
                                            class="form-control"
                                            placeholder="Zoek Pokémon (bv. Bulbasaur)"
                                            aria-label="Zoek Pokémon"
                                            aria-describedby="button-addon1"
                                        />
                                        <button class="btn btn-danger" type="button" id="button-addon1">Zoeken</button>
                                    </div>
                                </div>
                            </div>
                            <div class="card pokedex-card">
                                <div class="pokedex-header text-center">
                                    <h5>Charmander #004</h5>
                                </div>
                                <div class="pokedex-body">
                                    <img
                                        src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/4.png"
                                        class="card-img-top"
                                        alt="Charmander"
                                    />
                                    <div class="card-body text-center">
                                        <h5 class="card-title text-center">Stats</h5>
                                        <table class="table table-stats">
                                            <tbody>
                                                <tr>
                                                    <th scope="row">HP</th>
                                                    <td><span class="red-text">- 39</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Attack</th>
                                                    <td><span class="green-text">+ 52</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Defense</th>
                                                    <td><span class="red-text">- 43</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Special Attack</th>
                                                    <td><span class="red-text">- 60</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Special Defense</th>
                                                    <td><span class="red-text">- 50</span></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Speed</th>
                                                    <td><span class="green-text">+ 65</span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <button class="btn btn-primary mt-3" id="play-sound-charmander">Speel Geluid</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <aside class="col-md-3 order-first order-md-last bg-light">
                <div class="aside-content">
                    <h3>Jouw Pokémon</h3>
                    <h4>Bulbasaur</h4>
                    <img
                        src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/1.png"
                        alt="jouw pokémon"
                        width="100%"
                        height="100%"
                    />
                    <h3>Stats</h3>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row">Attack</th>
                                <td>9000</td>
                            </tr>
                            <tr>
                                <th scope="row">Stamina</th>
                                <td>9000</td>
                            </tr>
                            <tr>
                                <th scope="row">Defence</th>
                                <td>9000</td>
                            </tr>
                            <tr>
                                <th scope="row">Hit Points</th>
                                <td>9000</td>
                            </tr>
                        </tbody>
                    </table>
                    <h3>Deel jouw Pokémon!</h3>
                    <ul class="list-inline">
                        <li>
                            <a href="#"><i class="bi bi-facebook"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="bi bi-twitter"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="bi bi-instagram"></i></a>
                        </li>
                    </ul>
                </div>
            </aside>
        </div>
    </div>
</main>
<%- include('partials/footer') %>