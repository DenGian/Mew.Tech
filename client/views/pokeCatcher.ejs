<%- (include('partials/header')) %>
<main>
  <div class="container">
    <div class="row">
      <section class="col-md-9">
        <!-- pokeCatcher.ejs -->
        <%- include('partials/header') %>
        <main>
          <div class="container">
            <div class="row">
              <section class="col-md-9">
                <h2 class="text-center mt-4">Duel Arena</h2>
                <div class="container text-center mt-3">
                  <p class="lead">Test je Pokémon in een gevecht!</p>
                </div>
                <div class="container mt-5">
                  <div class="row justify-content-center">
                    <% if (randomPokemon) { %>
                    <div class="col-md-5">
                      <div class="card mb-5 pokedex-card">
                        <div class="card-header bg-primary text-white">
                          <h5 class="card-title text-center">
                            Je Pokémon: <%= randomPokemon.name %> #<%=
                            randomPokemon.id %>
                          </h5>
                        </div>
                        <img
                          src="<%= randomPokemon.image %>"
                          class="card-img-top"
                          alt="<%= randomPokemon.name %>"
                        />
                        <div class="card-body">
                          <h6 class="text-center">HP</h6>
                          <div class="progress mb-3">
                            <div
                              class="progress-bar"
                              role="progressbar"
                              aria-valuenow="<%= randomPokemon.stats.hp %>"
                              aria-valuemin="0"
                              aria-valuemax="100"
                            >
                              <%= randomPokemon.stats.hp %>/100
                            </div>
                          </div>
                          <!-- Stats -->
                          <div class="row">
                            <div class="col-6">
                              <h6 class="text-center">Aanval</h6>
                              <p class="text-center">
                                <%= randomPokemon.stats.attack %>
                              </p>
                            </div>
                            <div class="col-6">
                              <h6 class="text-center">Verdediging</h6>
                              <p class="text-center">
                                <%= randomPokemon.stats.defense %>
                              </p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% } %>
                    <!-- Similar setup for opponent Pokémon using `catchPokemon` if available -->
                  </div>
                </div>
                <div class="row">
                  <div class="col text-center">
                    <button type="button" class="btn btn-danger btn-lg">
                      vang Pokémon
                    </button>
                  </div>
                </div>
              </section>
              <aside class="col-md-3 order-first order-md-last bg-light">
                <div class="aside-content">
                  <!-- Content based on selected Pokémon -->
                  <h3>Jouw Pokémon</h3>
                  <h4><%= randomPokemon ? randomPokemon.name : '' %></h4>
                  <img
                    src="<%= randomPokemon ? randomPokemon.image : '' %>"
                    alt="jouw pokémon"
                    width="100%"
                    height="100%"
                  />
                  <!-- Add more dynamic stats display here -->
                </div>
              </aside>
            </div>
          </div>
        </main>

        <%- (include('partials/footer')) %>
      </section>
    </div>
  </div>
</main>
