<%- (include('partials/header')) %>
<main>
  <div class="container">
    <div class="row">
      <section class="col-md-9">
        <h2>Safari Zone</h2>
        <div class="container text-center mt-3">
          <p class="lead">
            Druk op de Pokéball en probeer de Pokémon te vangen!
          </p>
        </div>
        <div class="container img-fluid">
          <div class="row justify-content-center">
            <div class="col-md-6">
              <div class="card pokedex-card">
                <div class="pokedex-header text-center">
                  <h5>Bulbasaur #001</h5>
                </div>
                <div class="pokedex-body">
                  <img src="" class="card-img-top" alt="Bulbasaur" />
                  <div class="card-body text-center">
                    <h5 class="card-title">Stats</h5>
                    <div class="row">
                      <!-- Voeg een rij toe voor de stats -->
                      <div class="col-6 col-md-4">HP: 45</div>
                      <div class="col-6 col-md-4">Attack: 49</div>
                      <div class="col-6 col-md-4">Defense: 49</div>
                    </div>
                  </div>
                  <div class="d-flex justify-content-center">
                    <button
                      type="button"
                      class="btn-pokeball"
                      style="background-color: transparent; border: none"
                    >
                      <img
                        src="./assets/images/poke-ball.png"
                        alt="Pokeball"
                        style="width: 100px; height: 100px"
                      />
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <%- include('partials/aside') %>
    </div>
  </div>
</main>
<%- (include('partials/footer')) %>
