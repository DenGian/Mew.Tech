<%- include('partials/header') %>
<style>
  .pokemon-silhouette img.silhouette {
    filter: brightness(0) invert(1);
  }
</style>
<h1 class="text-center">PokeDex - Who's That Pokémon?</h1>
<main>
  <div class="container">
    <div class="row">
      <section class="col-md-9">
        <h2>Wie is die Pokémon?</h2>
        <div class="container text-center mt-3">
          <p class="lead">Raad de Pokémon!</p>
        </div>
        <div class="container mt-5">
          <div class="row justify-content-center">
            <div class="col-md-6">
              <div class="card pokedex-card">
                <div class="pokedex-header text-center">
                  <h3>Wie is deze Pokémon?</h3>
                </div>
                <div class="pokedex-body text-center">
                  <% if (pokemonData && pokemonData.sprites && pokemonData.sprites.front_default) { %>
                    <img
                      src="<%= pokemonData.sprites.front_default %>"
                      alt="Who's that Pokémon?"
                      class="card-img-top silhouette"
                    />
                  <% } else { %>
                    <p>Geen afbeelding beschikbaar.</p>
                  <% } %>

                  <% if (!feedback || feedback.includes('Incorrect')) { %>
                    <form action="/pokeGuess" method="post">
                      <% if (pokemonData && pokemonData.id) { %>
                        <input
                          type="hidden"
                          name="pokemonID"
                          value="<%= pokemonData.id %>"
                        />
                      <% } %>

                      <div class="input-group mb-3">
                        <input
                          type="text"
                          class="form-control"
                          name="guess"
                          placeholder="Raad de Pokémon"
                          aria-label="Raad de Pokémon"
                          aria-describedby="button-addon2"
                          required
                        />
                        <button
                          class="btn btn-danger"
                          type="submit"
                          id="button-addon2"
                        >
                          Raad
                        </button>
                      </div>
                    </form>
                  <% } %>

                  <% if (feedback) { %>
                    <div class="feedback text-center">
                      <h5><%= feedback %></h5>
                    </div>
                  <% } %>

                  <form action="/pokeGuess/next" method="post">
                    <button class="btn btn-primary mt-3" type="submit">
                      Volgende Pokémon
                    </button>
                  </form>

                  <!-- Stats Section -->
                  <div class="pokemon-guess-stats mt-4">
                    <h5 class="text-center">Jouw Statistieken</h5>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item">
                        Juist geraden:
                        <span id="correctGuesses"><%= correctGuesses %></span>
                      </li>
                      <li class="list-group-item">
                        Fout geraden:
                        <span id="incorrectGuesses"><%= incorrectGuesses %></span>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Include additional aside if needed -->
      <%- include('partials/aside') %>
    </div>
  </div>
</main>
<%- include('partials/footer') %>