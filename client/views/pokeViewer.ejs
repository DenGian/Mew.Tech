<%- include('partials/header') %>
<body class="bg-gray-100">
  <main class="container mx-auto p-4">
    <h1 class="text-center text-3xl mb-4">Mijn Profiel</h1>
    <div class="profile-box">
      <h2 class="text-2xl mb-4">Gebruikersinformatie</h2>
      <form action="/profile/update" method="POST" class="mb-4">
        <div class="mb-4">
          <label for="username" class="block text-lg font-medium text-gray-700"
            >Gebruikersnaam:</label
          >
          <input
            type="text"
            class="form-input mt-1 block w-full"
            id="username"
            name="username"
            value="JohnDoe"
          />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-lg font-medium text-gray-700"
            >E-mail:</label
          >
          <input
            type="email"
            class="form-input mt-1 block w-full"
            id="email"
            name="email"
            value="john@example.com"
          />
        </div>
        <button type="submit" class="pixel-button-pokemon py-2 px-4 rounded">
          Informatie opslaan
        </button>
      </form>

      <h2 class="text-2xl mb-4">Kies je hoofd-Pokémon</h2>
      <form action="/profile/set-main-pokemon" method="POST">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
          <% const caughtPokemons = [ { id: 1, name: "Pikachu", sprite:
          "/assets/images/pikachu.webp" }, { id: 2, name: "Charmander", sprite:
          "/assets/images/charmander.webp" }, { id: 3, name: "Squirtle", sprite:
          "/assets/images/squirtle.webp" }, { id: 4, name: "Bulbasaur", sprite:
          "/assets/images/bulbasaur.webp" } ]; %> <%
          caughtPokemons.forEach(pokemon => { %>
          <div class="pokemon-box">
            <label class="cursor-pointer">
              <input
                type="radio"
                name="mainPokemon"
                value="<%= pokemon.id %>"
                class="hidden"
              />
              <img
                src="<%= pokemon.sprite %>"
                alt="<%= pokemon.name %>"
                class="pokemon-img mx-auto mb-2"
              />
              <p class="text-xl"><%= pokemon.name %></p>
            </label>
          </div>
          <% }); %>
        </div>
        <button
          type="submit"
          class="pixel-button-pokemon py-2 px-4 rounded mt-4"
        >
          Hoofd-Pokémon instellen
        </button>
      </form>
    </div>
  </main>

  <script src="https://unpkg.com/flowbite@1.5.1/dist/flowbite.js"></script>
</body>
